grammar Transformation
  rule transformations
    ( function / "" ) (',' function)*  <Markdownplus::Literals::TransformationLiteral>
  end

  rule expression
    ( function / single_quote_string / double_quote_string / token / "" ) (',' expression)*  <Markdownplus::Literals::ExpressionLiteral>
  end

  rule function
    token parameters <Markdownplus::Literals::FunctionLiteral>
  end

  rule parameters
    "(" expression ")" <Markdownplus::Literals::ParensLiteral>
  end

  rule single_quote_string
     space? "'" [a-zA-Z0-9 \t]+ "'" space? <Markdownplus::Literals::StringLiteral>
  end

  rule double_quote_string
     space? '"' [a-zA-Z0-9 \t]+ '"' space? <Markdownplus::Literals::StringLiteral>
  end

  rule token
     space? [a-zA-Z0-9]+ space? <Markdownplus::Literals::TokenLiteral>
  end

  rule space
    [\s]+
  end
end
